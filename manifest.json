{
  "manifest_version": 3,
  "name": "EvenTrade - Screener.in Assistant",
  "version": "2.0",
  "description": "Advanced sidebar for Screener.in: Watchlists, Charting, and Scanner.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.screener.in/*"
  ],
  "action": {
    "default_title": "Toggle EvenTrade Sidebar"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.screener.in/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "style.css"
      ],
      "matches": [
        "https://www.screener.in/*"
      ]
    }
  ]
}